{
  "name": "@lumio-ui/react",
  "version": "0.1.7",
  "description": "Uma biblioteca de UI leve, elegante e moderna com suporte nativo a temas e efeitos de ripple.",
  "author": "Willian Louza",
  "license": "MIT",
  "type": "module",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./style.css": "./dist/index.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src",
    "test": "vitest run --passWithNoTests",
    "preversion": "npm run build && npm test",
    "release:patch": "npm version patch && git push && git push --tags",
    "release:minor": "npm version minor && git push && git push --tags",
    "release:major": "npm version major && git push && git push --tags"
  },
  "keywords": [
    "react",
    "lumio-ui",
    "components",
    "tailwind",
    "dark-mode",
    "ripple-effect"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lumio-ui/lumio-ui-react.git"
  },
  "bugs": {
    "url": "https://github.com/lumio-ui/lumio-ui-react/issues"
  },
  "homepage": "https://github.com/lumio-ui/lumio-ui-react#readme",
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^25.2.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitest/browser-playwright": "^4.0.18",
    "@vitest/coverage-v8": "^4.0.18",
    "autoprefixer": "^10.4.24",
    "playwright": "^1.58.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.0.0",
    "tsup": "^8.0.0",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.0.0",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-slot": "^1.2.4",
    "clsx": "^2.1.1",
    "lucide-react": "^0.563.0",
    "tailwind-merge": "^2.5.2"
  }
}
